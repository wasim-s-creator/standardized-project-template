{
  "name": "standardized-nodejs-template",
  "version": "1.0.0",
  "description": "Standardized Node.js project template with Express, authentication, and best practices",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "mocha tests/**/*.test.js --recursive --exit",
    "test:watch": "npm test -- --watch",
    "test:coverage": "nyc npm test",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "format": "prettier --write src/ tests/",
    "format:check": "prettier --check src/ tests/",
    "build": "npm run lint && npm test",
    "docker:build": "docker build -t nodejs-template .",
    "docker:run": "docker run -p 3000:3000 nodejs-template",
    "prepare": "test \"$CI\" = \"true\" && echo \"Skipping Husky in CI\" || husky install",
    "commit": "git-cz",
    "release": "standard-version",
    "release:patch": "npm run release -- --release-as patch",
    "release:minor": "npm run release -- --release-as minor",
    "release:major": "npm run release -- --release-as major",
    "validate": "npm run lint && npm run format:check && npm test",
    "test:coverage-report": "nyc --reporter=html npm test",
    "test:coverage-check": "nyc check-coverage --lines 70 --functions 70 --branches 65 --statements 70",
    "coverage:open": "open coverage/index.html"
  },
  "keywords": [
    "nodejs",
    "express",
    "api",
    "template",
    "authentication",
    "mongodb",
    "jwt",
    "vcs",
    "git-hooks",
    "conventional-commits"
  ],
  "author": "Wasim S Creator",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-rate-limit": "^7.4.1",
    "express-validator": "^7.2.0",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.7.3",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "nodemailer": "^6.9.16",
    "winston": "^3.15.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/node": "^22.7.8",
    "c8": "^10.1.3",
    "chai": "^5.1.2",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.13.0",
    "eslint-plugin-security": "^3.0.1",
    "husky": "^9.1.6",
    "is-ci": "^3.0.1",
    "lint-staged": "^15.2.10",
    "mocha": "^10.8.2",
    "nodemon": "^3.1.7",
    "nyc": "^17.1.0",
    "prettier": "^3.3.3",
    "sinon": "^19.0.2",
    "standard-version": "^9.5.0",
    "supertest": "^7.1.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ],
    "*.js": [
      "npm test -- --findRelatedTests --passWithNoTests"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "feat",
          "fix",
          "docs",
          "style",
          "refactor",
          "perf",
          "test",
          "build",
          "ci",
          "chore",
          "revert"
        ]
      ],
      "subject-max-length": [
        2,
        "always",
        72
      ],
      "subject-case": [
        2,
        "always",
        "lower-case"
      ],
      "subject-empty": [
        2,
        "never"
      ],
      "type-empty": [
        2,
        "never"
      ]
    }
  },
  "standard-version": {
    "releaseCommitMessageFormat": "chore(release): {{currentTag}}",
    "scripts": {
      "prebump": "npm run validate",
      "precommit": "git add CHANGELOG.md"
    }
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "tests/**",
      "coverage/**",
      "node_modules/**"
    ],
    "reporter": [
      "text",
      "lcov",
      "html"
    ],
    "check-coverage": true,
    "lines": 80,
    "functions": 85,
    "branches": 75
  }
}